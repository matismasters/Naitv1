@{
	ViewData["Title"] = "Notificaciones";
}

﻿<div class="px-2">
	<div class="container-fluid justify-content-around mb-4">
		<div class="d-flex justify-content-between">
			<h1>Moderación</h1>
			<a href="/Moderacion/Index" class="btn btn-primary">Volver</a>
		</div>
		<h2>Reportes y Notificaciones</h2>
	</div>

	@foreach (var notificacion in ViewBag.notificaciones)
	{
		<a href="/Moderacion/Reportes/@notificacion.Id" class="card mb-2 text-decoration-none text-reset">
			<div class="card-body text-info bg-dark rounded">
			@if (notificacion.EstadoNotificacion == "Pendiente")
			{
				<h5 class="card-title">Nuevo</h5>
			}
			else
			{
				<h5 class="card-title">Resuelto</h5>
			}
			<p class="card-text">@notificacion.Motivo</p>
			</div>
		</a>			
	}
</div>
