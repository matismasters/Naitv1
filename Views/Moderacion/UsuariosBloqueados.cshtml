@{
    ViewData["Title"] = "Usuarios bloqueados";
}

﻿<div class="px-2">
    <div class="container-fluid justify-content-around mb-4">
        <div class="d-flex justify-content-between">
            <h1>Moderación</h1>
            <a href="/Moderacion/Index" class="btn btn-primary">Volver</a>
        </div>
        <h2>Usuarios bloqueados</h2>
    </div>

    @foreach (Usuario usuario in ViewBag.usuariosBloqueados)
        {         
        <div class="card mb-2 text-decoration-none text-reset">
            <div class="card-body text-danger bg-dark rounded">
                <div class="mb-3">
                    <h5 class="card-title">Id: @usuario.Id</h5>
                    <p class="card-text">Nombre: @usuario.Nombre</p>
                    <p class="card-text">Email: @usuario.Email</p>
                    <p class="card-text">TipoUsuario: @usuario.TipoUsuario</p>
                </div>                
            </div>
        </div>             
        }
</div>