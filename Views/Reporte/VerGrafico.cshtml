@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h2>Generando gráfico...</h2>
    <canvas id="graficoKpis" width="400" height="200"></canvas>
    <a href="/Reporte/Imprimir" class="btn btn-primary">Descargar PDF</a>
    <p>Total de actividades: @ViewBag.Actividad</p>
    <script>
        const ctx = document.getElementById('graficoKpis').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Actividades', 'Usuarios'],
                datasets: [{
                    label: 'KPIs',
                    data: [@ViewBag.Actividad, @ViewBag.Usuarios],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.5)',
                        'rgba(255, 206, 86, 0.5)',
                    ]
                }]
            }
        });

        // Esperamos que se dibuje el gráfico
        setTimeout(() => {
            const canvas = document.getElementById('graficoKpis');
            const base64 = canvas.toDataURL('image/png');

            fetch('/Reporte/SubirGraficoBase64', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ base64 })
            }).catch(error => {
                console.error("Error al subir la imagen", error);
            });
        }, 1000); // Esperamos 1 segundo para asegurar que el gráfico esté listo
    </script>
</body>
</html>

}
